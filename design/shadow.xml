
<!-- Lights -->
<translate value="15 15 15">
	<light name="spot" amb="0.2" dif="0.6" spe="1.0" />
</translate>

<!-- Objects -->
<texture name="ShadowMap" format="depth">
	<program>
		<shader file="shadow.vert" />
		<shader file="shadow.frag" />
		<uniform type="sampler2DShadow" name="ShadowMap" link="ShadowMap"/>
		<uniform type="mat4" name="LightMatrix" link="lights.spot" />
		<uniform type="vec4" name="LightPosition" link="lights.spot" />
		<translate x="-2">
			<uniform type="mat4" name="MVPMatrix" />
			<cube />
		</translate>
		<translate x="+2">
			<uniform type="mat4" name="MVPMatrix" />
			<cube />
		</translate>
		<rotate axis="1 0 0" angle="90">
			<scale x="5.0" y="5.0">
				<uniform type="mat4" name="MVPMatrix" />
				<square />
			</scale>
		</rotate>
	</program>
</texture>



