<program>
	<shader file="halfmoon.vert" />
	<shader file="halfmoon.frag" />
	<blend>
		<translate x="+3.0">
		<scale>
			<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
			<box />
		</scale>
		</translate>
		<translate x="-3.0">
		<scale>
			<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
			<box />
		</scale>
		</translate>
	</blend>
</program>
