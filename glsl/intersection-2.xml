<!-- Cubes instance -->
<blend>
<program>
	<shader file="color.vert" />
	<shader file="color.frag" />
	<depth mode="less">
		<wireframe faces="front">
			<instance of="cubes" />
		</wireframe>
	</depth>
</program>
</blend>

