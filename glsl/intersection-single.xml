-->


<!-- Outlines -->
<program>
	<shader file="wireframe.vert" />
	<shader file="wireframe.frag" />
	<wireframe faces="front">
		<instance of="cubes" />
	</wireframe>
</program>


<!-- End of render targets -->
</texture>
</texture>
</texture>
</texture>


<!-- End volumes -->
</texture>
</texture>

