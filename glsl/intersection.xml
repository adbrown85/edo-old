<!-- Cubes driving boolean operations -->
<group name="cubes">
	<translate x="-1">
		<cube name="left">
			<uniform type="mat4" name="MVPMatrix" />
			<uniform type="vec4" name="Color" value="1 0 1 1" />
			<uniform type="sampler3D" name="Volume" link="head" />
			<uniform type="float" name="Opacity" value="5" />
		</cube>
	</translate>
	<translate x="+1" y="+0.5" z="-0.5">
		<cube name="right">
			<uniform type="mat4" name="MVPMatrix" />
			<uniform type="vec4" name="Color" value="0 1 1 1" />
			<uniform type="sampler3D" name="Volume" link="bunny" />
			<uniform type="float" name="Opacity" value="2" />
		</cube>
	</translate>
</group>


<!-- Begin volumes -->
<texture name="head" file="../textures/head128.vlb">
<texture name="bunny" file="../textures/bunny128.vlb">


<!-- Begin render targets -->
<texture name="coords" size="512" >


<!-- Begin offscreen framebuffer -->
<framebuffer>
	<renderbuffer type="depth" size="512" />
	<target link="coords" />


<!-- Begin coordinates program -->
<program>
	<shader file="coordinates.vert" />
	<shader file="coordinates.frag" />
	<uniform type="mat4" name="MVPMatrix" />


<!-- Boolean XOR behind intersection -->
<clear />
<depth mode="less">
	<boolean operation="XOR" of="cubes" only="behind" defaults="false" />
</depth>
<screen>
	<blend>
		<program>
			<shader file="volume.vert" />
			<shader file="volume.frag" />
			<cull faces="front">
				<depth mode="greater">
					<uniform type="mat4" name="MVPMatrix" />
					<uniform type="sampler2D" name="ExitCoords" link="coords" />
					<boolean operation="XOR" of="cubes" only="behind" />
				</depth>
			</cull>
		</program>
	</blend>
</screen>


<!-- Boolean AND as intersection -->
<clear />
<depth mode="less">
	<boolean operation="AND" of="cubes" defaults="false" />
</depth>
<screen>
	<blend>
		<program>
			<shader file="intersection.vert" />
			<shader file="intersection.frag" />
			<cull faces="front">
				<depth mode="less">
					<uniform type="sampler2D" name="EndCoords0" link="coords" />
					<boolean operation="AND" of="cubes" />
				</depth>
			</cull>
		</program>
	</blend>
</screen>


<!-- Boolean XOR in front of intersection -->
<clear />
<depth mode="less">
	<boolean operation="XOR" of="cubes" only="forward" defaults="false" />
</depth>
<screen>
	<blend>
		<program>
			<shader file="volume.vert" />
			<shader file="volume.frag" />
			<cull faces="front">
				<depth mode="greater">
					<uniform type="sampler2D" name="ExitCoords" link="coords" />
					<boolean operation="XOR" of="cubes" only="forward" />
				</depth>
			</cull>
		</program>
	</blend>
</screen>


<!-- End coordinates program -->
</program>


<!-- End offscreen framebuffer -->
</framebuffer>


<!-- End render targets -->
</texture>


<!-- Outlines -->
<program>
	<shader file="color.vert" />
	<shader file="color.frag" />
	<depth mode="less">
		<wireframe faces="front">
			<instance of="cubes" />
		</wireframe>
	</depth>
</program>


<!-- End volumes -->
</texture>
</texture>

