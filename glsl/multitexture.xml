<!--
 * multitexture.xml
 *     Uses different textures on the left and right.
 *
 * Author
 *     Andy Brown
-->



<texture2d file="../textures/crate.jpg" name="crate">
<texture2d file="../textures/stone.jpg" name="stone">
	<program>
		<shader file="multitexture.vert" />
		<shader file="multitexture.frag" />
		
		<!-- Left cube -->
		<translate x="-2.0">
		<scale value="2.0">
			<uniform type="sampler2d" name="left" link="crate" />
			<uniform type="sampler2d" name="right" link="stone" />
			<uniform type="mat4" name="MVPMatrix" link="modelviewprojection" />
			<cube style="2d" />
		</scale>
		</translate>
		
		<!-- Right cube -->
		<translate x="+2.0">
		<scale value="2.0">
			<uniform type="sampler2d" name="left" link="stone" />
			<uniform type="sampler2d" name="right" link="crate" />
			<uniform type="mat4" name="MVPMatrix" link="modelviewprojection" />
			<cube style="2d" />
		</scale>
		</translate>
	</program>
</texture2d>
</texture2d>
