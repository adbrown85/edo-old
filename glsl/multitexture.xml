<!--
 * multitexture.xml
 *     Uses different textures on the left and right.
 * 
 * Author
 *     Andrew Brown <adb1413@rit.edu>
-->



<texture file="../textures/crate.jpg" name="crate">
<texture file="../textures/stone.jpg" name="stone">
	<program>
		<shader file="multitexture.vert" />
		<shader file="multitexture.frag" />
		
		<!-- Left cube -->
		<translate x="-2.0">
		<scale value="2.0">
			<cube style="2D">
				<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
				<uniform type="sampler2d" name="left" link="crate" />
				<uniform type="sampler2d" name="right" link="stone" />
			</cube>
		</scale>
		</translate>
		
		<!-- Right cube -->
		<translate x="+2.0">
		<scale value="2.0">
			<cube style="2D">
				<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
				<uniform type="sampler2d" name="left" link="stone" />
				<uniform type="sampler2d" name="right" link="crate" />
			</cube>
		</scale>
		</translate>
	</program>
</texture>
</texture>
