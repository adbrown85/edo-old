<!-- Begin program -->
<program>
	<shader file="texture.vert" />
	<shader file="texture.frag" />

<!-- Left cube -->
<texture file="../textures/crate.jpg" name="crate">
	<translate x="-2.0">
		<scale value="2.0">
			<uniform type="sampler2d" name="unit" link="crate" />
			<box />
		</scale>
	</translate>
</texture>

<!-- Right cube -->
<texture file="../textures/crate.jpg" name="crate">
	<translate x="+2.0">
		<scale value="2.0">
			<uniform type="sampler2d" name="unit" link="crate" />
			<box />
		</scale>
	</translate>
</texture>

<!-- End program -->
</program>
