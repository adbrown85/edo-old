<program>
	<shader type="vertex" file="glsl/normal.vert"/>
	<shader type="fragment" file="glsl/lighting.frag"/>
	<uniform type="float" name="ambient" value="0.5">
		<translate x="3.0" y="0.0" z="0.0">
			<shape type="box" size="1.0"/>
		</translate>
	</uniform>
</program>
