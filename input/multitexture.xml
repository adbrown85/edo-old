<!--
 * multitexture.xml
 *     Uses different textures on the left and right.
 *
 * Author
 *     Andy Brown
-->



<texture2d file="crate.jpg" name="crate">
<texture2d file="stone.jpg" name="stone">
	<program>
		<shader type="fragment" file="../glsl/multitexture.frag" />
		<uniform type="sampler2D" name="left" link="crate">
		<uniform type="sampler2D" name="right" link="stone">
			<translate x="-2.0">
				<box size="2.0" style="2d" />
			</translate>
		</uniform>
		</uniform>
		<uniform type="sampler2D" name="left" link="stone">
		<uniform type="sampler2D" name="right" link="crate">
			<translate x="+2.0">
				<box size="2.0" style="2d" />
			</translate>
		</uniform>
		</uniform>
	</program>
</texture2d>
</texture2d>
