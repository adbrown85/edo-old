<!-- multitexture.xml -->


<texture type="2D" file="input/crate.jpg" name="crate">
<texture type="2D" file="input/stone.jpg" name="stone">
	<program>
		<shader type="fragment" file="glsl/multitexture.glsl" />
		<uniform type="sampler2D" name="left" link="crate">
		<uniform type="sampler2D" name="right" link="stone">
			<translate x="-2.0">
				<box size="2.0" style="2d" />
			</translate>
		</uniform>
		</uniform>
		<uniform type="sampler2D" name="left" link="stone">
		<uniform type="sampler2D" name="right" link="crate">
			<translate x="+2.0">
				<box size="2.0" style="2d" />
			</translate>
		</uniform>
		</uniform>
	</program>
</texture>
</texture>
