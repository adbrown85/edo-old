<!--
 * raycaster-lit.xml
 *     Casts rays through a volume with shading.
 * 
 * Author
 *     Andy Brown <andybrown85@gmail.com>
-->



<program>
	<shader type="vertex" file="glsl/raydirection.vert" />
	<shader type="fragment" file="glsl/raycaster-lit.frag" />
	<uniform type="int" name="samples" value="256">
	<uniform type="float" name="pitch" value="0.00390625">
		<texture type="3D" file="input/bear.vlb" name="volume">
		<uniform type="sampler3D" name="volume" link="volume">
			<translate x="0.0" y="0.0" z="0.0">
				<shape type="Box" size="1.0" style="3D" />
			</translate>
		</uniform>
		</texture>
	</uniform>
	</uniform>
</program>
