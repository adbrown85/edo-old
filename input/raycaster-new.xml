<!--
 * raycaster-new.xml
 *     Casts rays through a volume.
 * 
 * Author
 *     Andy Brown <andybrown85@gmail.com>
-->



<program>
	<shader type="fragment" file="glsl/raycaster-new.frag" />
	<uniform type="int" name="samples" value="100">
	<uniform type="float" name="brightness" value="10.0">
		<texture type="3D" file="input/dendrite.vlb" name="dendrite">
		<uniform type="sampler3D" name="volume" link="dendrite">
			<box size="1.0" />
		</uniform>
		</texture>
	</uniform>
	</uniform>
</program>
