<!--
 * raycaster.xml
 *     Casts rays through a volume.
 * 
 * Author
 *     Andy Brown <andybrown85@gmail.com>
-->



<program>
	<shader type="fragment" file="raycaster.frag" />
	<shader type="vertex" file="world.vert" />
	<uniform type="int" name="samples" value="50">
		<uniform type="float" name="brightness" value="5.0">
		<texture3d file="skull.vlb" name="skull">
			<uniform type="sampler3D" name="volume" link="skull">
				<translate x="0.0" y="0.0" z="0.0">
					<box size="1.0" />
				</translate>
			</uniform>
		</texture3d>
		</uniform>
	</uniform>
</program>
