<group name="cubes">
	<translate x="-2">
		<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
		<cube />
	</translate>
	<translate x="+2">
		<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
		<cube />
	</translate>
</group>



<program>
	<shader file="../../glsl/outline.vert" />
	<shader file="../../glsl/outline.frag" />
	<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
	<boolean operation="AND" of="cubes" />
	<instance of="cubes" />
</program>
