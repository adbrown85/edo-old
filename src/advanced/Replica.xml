<group name="cubes">
	<translate x="-2.0">
		<cube name="left">
			<uniform type="mat4" name="MVPMatrix" />
			<uniform type="vec4" name="Color" value="1 0 1 1" />
		</cube>
	</translate>
	<translate x="+2.0">
		<cube name="right">
			<uniform type="mat4" name="MVPMatrix" />
			<uniform type="vec4" name="Color" value="0 1 1 1" />
		</cube>
	</translate>
</group>


<program>
	<shader file="../../glsl/color.vert" />
	<shader file="../../glsl/color.frag" />
	<translate y="-2.0">
		<replica of="cubes" exclude="left"/>
	</translate>
</program>


<program>
	<shader file="../../glsl/coordinates.vert" />
	<shader file="../../glsl/coordinates.frag" />
	<translate y="+2.0">
		<replica of="cubes" />
	</translate>
</program>

