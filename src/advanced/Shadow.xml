<!-- Lights -->
<translate y="+3">
	<rotate axis="1 0 0" angle="-90">
		<light name="spot" amb="0.2" dif="0.4" spe="0.8" />
	</rotate>
</translate>


<!-- Objects -->
<group name="objects">
	<translate x="-1">
		<cube>
			<uniform type="mat4" name="MVPMatrix" />
		</cube>
	</translate>
</group>


<!-- Render -->
<shadow of="objects" from="spot">
	<program>
		<shader file="../../glsl/color.vert" />
		<shader file="../../glsl/color.frag" />
		<clone of="objects" selectable="true" />
	</program>
