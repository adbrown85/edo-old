<group name="cubes">
	<uniform type="vec3" name="LightPosition" value="10 10 10" />
	<uniform type="float" name="Ambient" value="0.2" />
	<translate x="-2.0">
		<cube>
			<uniform type="mat4" name="MVPMatrix" />
			<uniform type="mat4" name="NormalMatrix" />
			<uniform type="mat4" name="MVMatrix" />
		</cube>
	</translate>
	<translate x="+2.0">
		<cube>
			<uniform type="mat4" name="MVPMatrix" />
			<uniform type="mat4" name="NormalMatrix" />
			<uniform type="mat4" name="MVMatrix" />
		</cube>
	</translate>
</group>


<program>
	<shader file="../../glsl/basic.vert" />
	<shader file="../../glsl/basic.frag" />
	<translate y="+2.0">
		<instance of="cubes" />
	</translate>
<!--
	<translate y="-2.0">
		<instance of="cubes" />
	</translate>
-->
</program>

