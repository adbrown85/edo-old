<texture2d name="mytexture" size="512">
	<framebuffer>
		<target link="mytexture" />
		<program>
			<shader file="../../input/coordinates.vert" />
			<shader file="../../input/coordinates.frag" />
			<uniform type="mat4" name="MVPMatrix" link="modelviewprojection" />
			<square />
		</program>
	</framebuffer>
	<program>
		<shader file="../../input/texture.vert" />
		<shader file="../../input/texture.frag" />
		<uniform type="mat4" name="MVPMatrix" link="modelviewprojection" />
		<uniform type="sampler2D" name="unit" link="mytexture" />
		<square />
	</program>
</texture2d>
 
