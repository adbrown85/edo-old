<group name="cubes">
	<translate x="-2">
		<cube>
			<uniform type="mat4" name="MVPMatrix" />
		</cube>
	</translate>
	<translate x="+2">
		<placeholder name="foo" />
	</translate>
</group>


<program>
	<shader file="../../glsl/color.vert" />
	<shader file="../../glsl/color.frag" />
	<replica of="cubes">
		<replacement of="foo">
			<cube>
				<uniform type="mat4" name="MVPMatrix" />
			</cube>
		</replacement>
	</replica>
</program>
