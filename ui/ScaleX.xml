<program>
	<shader file="../glsl/color.vert" />
	<shader file="../glsl/color.frag" />
	<uniform type="vec4" name="Color" value="1 0 0 1" />
	<line from="0 0 0 1" to="0.5 0 0 1" selectable="false">
		<uniform type="mat4" name="MVPMatrix" />
	</line>
	<translate x="0.5">
		<rotate axis="0 1 0" angle="-90">
			<scale x="0.15" y="0.15" z="0.15">
				<cube defaults="false">
					<uniform type="mat4" name="MVPMatrix" />
				</cube>
			</scale>
		</rotate>
	</translate>
</program>
