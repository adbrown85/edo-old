<program>
	<shader file="../glsl/color.vert" />
	<shader file="../glsl/color.frag" />
	<uniform type="vec4" name="Color" value="0 1 0 1" />
	<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
	<line from="0 0 0 1" to="0 0.5 0 1" selectable="false"/>
	<translate y="0.5">
		<rotate angle="90" x="1.0">
			<scale x="0.15" y="0.15" z="0.15">
				<uniform type="mat4" name="MVPMatrix" as="modelviewprojection" />
				<cube />
			</scale>
		</rotate>
	</translate>
</program>
